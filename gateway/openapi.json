{
  "openapi": "3.0.0",
  "info": {
    "title": "Gateway API",
    "version": "1.0.0"
  },
  "servers": [
    {
      "url": "http://localhost:3000"
    }
  ],
  "paths": {
    "/health/record/create": {
      "post": {
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/HealthRecord"
              }
            }
          }
        },
        "responses": {
          "200": {
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/Message"
                }
              }
            }
          },
          "500": {
            "description": "Server error"
          }
        }
      }
    },
    "/health/record/all": {
      "get": {
        "responses": {
          "200": {
            "description": "List of records",
            "content": {
              "application/json": {
                "schema": {
                  "type": "array",
                  "items": {
                    "$ref": "#/components/schemas/HealthRecord"
                  }
                }
              }
            }
          },
          "500": {
            "description": "Server error"
          }
        }
      }
    },
    "/health/record/update": {
      "put": {
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/HealthRecordUpdate"
              }
            }
          }
        },
        "responses": {
          "200": {
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/Message"
                }
              }
            }
          },
          "500": {
            "description": "Server error"
          }
        }
      }
    },
    "/health/record/{recordId}": {
      "get": {
        "parameters": [
          {
            "name": "recordId",
            "in": "path",
            "required": true,
            "schema": {
              "type": "integer"
            }
          }
        ],
        "responses": {
          "200": {
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/HealthRecord"
                }
              }
            }
          },
          "500": {
            "description": "Server error"
          }
        }
      }
    },
    "/health/record/delete/{recordId}": {
      "delete": {
        "parameters": [
          {
            "name": "recordId",
            "in": "path",
            "required": true,
            "schema": {
              "type": "integer"
            }
          }
        ],
        "responses": {
          "200": {
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/Message"
                }
              }
            }
          },
          "500": {
            "description": "Server error"
          }
        }
      }
    },
    "/health/record/athlete/{athleteId}/{activityStatus}/{startTime}/{endTime}": {
      "get": {
        "parameters": [
          {
            "name": "athleteId",
            "in": "path",
            "required": true,
            "schema": {
              "type": "string"
            }
          },
          {
            "name": "activityStatus",
            "in": "path",
            "schema": {
              "type": "integer"
            }
          },
          {
            "name": "startTime",
            "in": "path",
            "schema": {
              "type": "string",
              "format": "date-time"
            }
          },
          {
            "name": "endTime",
            "in": "path",
            "schema": {
              "type": "string",
              "format": "date-time"
            }
          }
        ],
        "responses": {
          "200": {
            "content": {
              "application/json": {
                "schema": {
                  "type": "array",
                  "items": {
                    "$ref": "#/components/schemas/HealthRecord"
                  }
                }
              }
            }
          },
          "500": {
            "description": "Server error"
          }
        }
      }
    },
    "/health/record/athlete/stats/{athleteId}/{activityStatus}/{startTime}/{endTime}": {
      "get": {
        "parameters": [
          {
            "name": "athleteId",
            "in": "path",
            "required": true,
            "schema": {
              "type": "string"
            }
          },
          {
            "name": "activityStatus",
            "in": "path",
            "schema": {
              "type": "integer"
            }
          },
          {
            "name": "startTime",
            "in": "path",
            "schema": {
              "type": "string",
              "format": "date-time"
            }
          },
          {
            "name": "endTime",
            "in": "path",
            "schema": {
              "type": "string",
              "format": "date-time"
            }
          }
        ],
        "responses": {
          "200": {
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/HealthRecordAggregation"
                }
              }
            }
          },
          "400": {
            "description": "Invalid input"
          },
          "500": {
            "description": "Server error"
          }
        }
      }
    }
  },
  "components": {
    "schemas": {
      "HealthRecord": {
        "type": "object",
        "properties": {
          "recordId": {
            "type": "integer"
          },
          "athleteId": {
            "type": "string"
          },
          "timestamp": {
            "type": "string",
            "format": "date-time"
          },
          "heartRate": {
            "type": "number"
          },
          "bodyTemperature": {
            "type": "number"
          },
          "bloodPressure": {
            "type": "string"
          },
          "bloodOxygen": {
            "type": "number"
          },
          "stepCount": {
            "type": "number"
          },
          "activityStatus": {
            "type": "integer"
          },
          "latitude": {
            "type": "number"
          },
          "longitude": {
            "type": "number"
          },
          "secureTransmissionStatus": {
            "type": "number"
          }
        },
        "required": [
          "athleteId",
          "timestamp",
          "heartRate",
          "bodyTemperature",
          "bloodPressure",
          "bloodOxygen",
          "stepCount",
          "activityStatus",
          "latitude",
          "longitude",
          "secureTransmissionStatus"
        ]
      },
      "HealthRecordUpdate": {
        "type": "object",
        "properties": {
          "recordId": {
            "type": "integer"
          },
          "athleteId": {
            "type": "string"
          },
          "timestamp": {
            "type": "string",
            "format": "date-time"
          },
          "heartRate": {
            "type": "number"
          },
          "bodyTemperature": {
            "type": "number"
          },
          "bloodPressure": {
            "type": "string"
          },
          "bloodOxygen": {
            "type": "number"
          },
          "stepCount": {
            "type": "number"
          },
          "activityStatus": {
            "type": "integer"
          },
          "latitude": {
            "type": "number"
          },
          "longitude": {
            "type": "number"
          },
          "secureTransmissionStatus": {
            "type": "number"
          }
        },
        "required": [
          "recordId",
          "athleteId",
          "timestamp",
          "heartRate",
          "bodyTemperature",
          "bloodPressure",
          "bloodOxygen",
          "stepCount",
          "activityStatus",
          "latitude",
          "longitude",
          "secureTransmissionStatus"
        ]
      },
      "Message": {
        "type": "object",
        "properties": {
          "message": {
            "type": "string"
          }
        }
      },
      "HealthRecordAggregation": {
        "type": "object",
        "properties": {
          "athleteId": {
            "type": "string"
          },
          "activityStatus": {
            "type": "integer",
            "nullable": true
          },
          "startTime": {
            "type": "string",
            "format": "date-time",
            "nullable": true
          },
          "endTime": {
            "type": "string",
            "format": "date-time",
            "nullable": true
          },
          "heartRate": {
            "type": "object",
            "properties": {
              "min": {
                "type": "number"
              },
              "max": {
                "type": "number"
              },
              "avg": {
                "type": "number"
              }
            }
          },
          "bodyTemperature": {
            "type": "object",
            "properties": {
              "min": {
                "type": "number"
              },
              "max": {
                "type": "number"
              },
              "avg": {
                "type": "number"
              }
            }
          },
          "bloodOxygen": {
            "type": "object",
            "properties": {
              "min": {
                "type": "number"
              },
              "max": {
                "type": "number"
              },
              "avg": {
                "type": "number"
              }
            }
          },
          "stepCount": {
            "type": "object",
            "properties": {
              "sum": {
                "type": "number"
              }
            }
          },
          "bloodPressure": {
            "type": "object",
            "properties": {
              "min": {
                "type": "string"
              },
              "max": {
                "type": "string"
              }
            }
          },
          "records": {
            "type": "array",
            "items": {
              "type": "object",
              "properties": {
                "timestamp": {
                  "type": "string",
                  "format": "date-time"
                },
                "bloodPressure": {
                  "type": "string"
                },
                "latitude": {
                  "type": "number"
                },
                "longitude": {
                  "type": "number"
                },
                "secureTransmissionStatus": {
                  "type": "integer"
                }
              }
            }
          }
        }
      }
    }
  }
}
